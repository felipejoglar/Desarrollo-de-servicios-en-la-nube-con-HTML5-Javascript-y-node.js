<h2>Preguntas</h2>
<form method="get" action="/quizes/<%= quiz.id  %>/answer">
    <p>Pregunta: <%= quiz.pregunta %></p>
    <input type="text" name="respuesta" placeholder="Responda aquÃ­">
    <button type="submit"><img class="editar" src='/images/enviar.png' alt='Enviar'> Enviar</button>
    <a href="/quizes"><button type="button"><img class="editar" src='/images/cancelar.png' alt='Cancelar'> Cancelar</button></a>
</form>

<p><a href="/quizes/<%= quiz.id %>/comments/new"><button><img class="editar" src='/images/comentario.png' alt='Comentario'> Nuevo comentario</button></a></p>

<p><strong>Comentarios:</strong></p>
<%for(index in quiz.Comments){%>
    <%if (quiz.Comments[index].publicado || session.user){%>
	   <p>- <%=quiz.Comments[index].texto%></p>
       <%if (session.user && !quiz.Comments[index].publicado){%>
            <a href="/quizes/<%=quiz.id%>/comments/<%=quiz.Comments[index].id%>/publish"><button><img class="editar" src='/images/publicar.png' alt='Publicar'> Publicar comentario</button></a>
        <%}%>
    <%}%>
<%}%>
